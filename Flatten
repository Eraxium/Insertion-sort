list2 = [[1,'a',['cat'],2],[[[3]],'dog'],4,5]
list3 = [[1, 2], [3, 4], [5, 6, 7]]
newlist = []

def flattenfunction(x):
  for i in x:
      if isinstance(i, list):
          flattenfunction(i)
      else:
          newlist.append(i)
         
flattenfunction(list2)
print(newlist)

list3 = list3[::-1]

for i in range(len(list3)):
  list3[i]=list3[i][::-1]
  
print(list3)

